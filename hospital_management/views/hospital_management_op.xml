<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="hospital_management_op_view_tree" model="ir.ui.view">
        <field name="name">hospital.management.op.view.tree</field>
        <field name="model">hospital.management.op</field>
        <field name="arch" type="xml">

            <tree>
                <field name="token_no"/>
                <field name="card_id"/>
                <field name="patient_id"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="blood_group"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="fee"/>
                <field name="state"/>
            </tree>

        </field>
    </record>

    <record id="hospital_management_op_view_form" model="ir.ui.view">
        <field name="name">hospital.management.op.view.form</field>
        <field name="model">hospital.management.op</field>
        <field name="arch" type="xml">

            <form string="Hospital Management Op Form">

                <header>
                    <button name="confirm" states="draft" string="Confirm" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,op"/>
                </header>

                <sheet>
                    <h1>
                        <field name="token_no"/>
                    </h1>
                    <group>
                        <group>
                            <field name="card_id"/>
                            <field name="patient_id"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="blood_group"/>
                        </group>
                        <group>
                            <field name="doctor_id"/>
                            <field name="date"/>
                            <field name="currency_id" invisible="1"/>
<!--                            currency doesn't need to show so invisible="1" -->

                            <field name="fee" widget="monetary"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_management_menu_op_action" model="ir.actions.act_window">
        <field name="name">OP</field>
        <field name="res_model">hospital.management.op</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="hospital_management_menu_op" name="OP" parent="hospital_management_menu_root" action="hospital_management_menu_op_action"/>

</odoo>
