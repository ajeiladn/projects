<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="hospital_management_view_tree" model="ir.ui.view">
        <field name="name">hospital.management.view.tree</field>
        <field name="model">hospital.management</field>
        <field name="arch" type="xml">

            <tree>
                <field name="patient_sequence"/>
                <field name="patient_id"/>
                <field name="dob"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="mobile"/>
                <field name="telephone"/>
                <field name="blood_group"/>
            </tree>

        </field>
    </record>


    <record id="hospital_management_view_form" model="ir.ui.view">
        <field name="name">hospital.management.view.form</field>
        <field name="model">hospital.management</field>
        <field name="arch" type="xml">

            <form string="Hospital Management Form">
                <sheet>
                    <h1>
                        <field name="patient_sequence"/>
                    </h1>
                    <group>
                        <group>
                            <field name="patient_id" widget="res_partner_many2one" context="{'show_address': 1}" options='{"always_reload": True}'/>
    <!--                        widget name (res_partner_many2one) is already created one from sale_order_views.xml -->
                            <field name="dob"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="mobile"/>
                            <field name="telephone"/>
                            <field name="blood_group"/>
                        </group>
                        <notebook>
                            <page string="History">
                                <field name="history_ids">
                                    <tree editable="bottom">
                                        <field name="date"/>
                                        <field name="token"/>
                                        <field name="doctor"/>
                                        <field name="department"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="hospital_management_menu_patient_card_action" model="ir.actions.act_window">
        <field name="name">Patient Card</field>
        <field name="res_model">hospital.management</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hospital_management_menu_root" name="Hospital Management"/>
    <menuitem id="hospital_management_menu_patient_details" name="Patient Details" parent="hospital_management_menu_root" sequence="1"/>
    <menuitem id="hospital_management_menu_configurations" name="Configurations" parent="hospital_management_menu_root" sequence="4"/>
    <menuitem id="hospital_management_menu_patient_card" name="Patient Card" parent="hospital_management_menu_patient_details" action="hospital_management_menu_patient_card_action"/>

</odoo>
